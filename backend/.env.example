# ==========================================
# MAGETOOL BACKEND - ENVIRONMENT VARIABLES
# ==========================================
# Copy to .env for local development
# Set these as environment variables on your deployment platform

# ------------------------------------------
# ENVIRONMENT (development/production)
# ------------------------------------------
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ------------------------------------------
# SERVER
# ------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ------------------------------------------
# CORS - IMPORTANT! 
# ------------------------------------------
# After first deploy, set this to your actual frontend URLs:
# CORS_ORIGINS=["https://your-app.vercel.app","https://yourdomain.com"]
#
# For Render: Dashboard > Environment > Add Variable
# For Hugging Face: Settings > Repository secrets
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ------------------------------------------
# FILE LIMITS (MB)
# ------------------------------------------
MAX_IMAGE_SIZE_MB=50
MAX_VIDEO_SIZE_MB=500
MAX_AUDIO_SIZE_MB=100
MAX_DOCUMENT_SIZE_MB=50

# ------------------------------------------
# TIMEOUTS (seconds)
# ------------------------------------------
REQUEST_TIMEOUT=30
UPLOAD_TIMEOUT=300
CONVERSION_TIMEOUT=600
DOWNLOAD_TIMEOUT=60

# ------------------------------------------
# RATE LIMITING
# ------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ------------------------------------------
# CLEANUP
# ------------------------------------------
CLEANUP_INTERVAL_MINUTES=10
FILE_EXPIRY_MINUTES=30

# ------------------------------------------
# OPTIONAL SERVICES
# ------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
# AI_SERVICE_URL=https://your-ai-service
# AI_SERVICE_KEY=your-api-key
