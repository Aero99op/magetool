# ==========================================
# MAGETOOL - ENVIRONMENT TEMPLATE
# ==========================================
# Copy this file to .env and configure for your environment
# NEVER commit .env to version control!

# ------------------------------------------
# BACKEND (FastAPI)
# ------------------------------------------

# Environment (development/staging/production)
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS - Add your production frontend URLs (JSON array format)
# For Vercel + custom domain example:
CORS_ORIGINS=["https://your-app.vercel.app","https://yourdomain.com"]

# File Size Limits (MB)
MAX_IMAGE_SIZE_MB=50
MAX_VIDEO_SIZE_MB=500
MAX_AUDIO_SIZE_MB=100
MAX_DOCUMENT_SIZE_MB=50

# Timeouts (seconds)
REQUEST_TIMEOUT=30
UPLOAD_TIMEOUT=300
CONVERSION_TIMEOUT=600
DOWNLOAD_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Temp File Cleanup
CLEANUP_INTERVAL_MINUTES=10
FILE_EXPIRY_MINUTES=30

# Error Monitoring (optional - Sentry)
# SENTRY_DSN=https://your-sentry-dsn

# AI Services (optional)
# AI_SERVICE_URL=https://your-ai-service
# AI_SERVICE_KEY=your-ai-api-key

# ------------------------------------------
# FRONTEND (Next.js)
# ------------------------------------------
# Create a separate .env.local in the frontend directory

# API URL - Backend endpoint
NEXT_PUBLIC_API_URL=https://your-backend.onrender.com

# ------------------------------------------
# DEPLOYMENT PLATFORM NOTES
# ------------------------------------------
# Vercel (Frontend):
#   - Add NEXT_PUBLIC_API_URL in Project Settings > Environment Variables
#   - Enable "Automatically encrypt and store in Vercel's secrets"
#
# Render (Backend):
#   - Add all backend env vars in Dashboard > Environment
#   - Use the Internal URL for NEXT_PUBLIC_API_URL if same region
#
# Hugging Face Spaces (Backend):
#   - Add secrets in Settings > Repository secrets
#   - Reference using os.environ in Python
#
# Docker:
#   - Use docker-compose.yml env_file or environment section
#   - Never bake secrets into images
